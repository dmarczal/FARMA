<section id="home-page-team" class="section container box-4 scrollspy">
 <h4 class="center-align gray-text">
  Equipe de desenvolvimento
 </h4>
 <br>

 <div class="row">
  <% @developers.each do |dev| %>
   <div class="col s12 m4">
     <div class="card hoverable">
       <div class="card-image waves-effect waves-block waves-light">
         <%= image_tag attachment_url(dev, :profile_image, :fill, 300, 300, format: "jpg", fallback: "default-avatar"), :class => 'circle index-img activator' %>
       </div>
       <div class="card-reveal">
         <span class="card-title white-text">
           <h5> <%= dev.name %> </h5>
           <h6> <%= dev.function %> </h6>
         </span>
         <p>
          <%= dev.institution %>
         </p>
         <b><%= link_to 'SAIBA MAIS', "http://#{dev.link}", class: 'right' %></b>
       </div>
     </div>
   </div>
  <% end %>
 </div>
 
 <div class="center move-btn">
 <%= link_to "Outros desenvolvedores", team_path, class: "waves-effect waves-light btn-large tooltipped",
   "data-position" => "bottom", "data-delay" => "50",
   "data-tooltip" => "Ver todos os desenvolvedores que participaram do farma" %>
</div>

</section>

