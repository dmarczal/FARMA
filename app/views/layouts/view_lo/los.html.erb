<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="//cdn.materialdesignicons.com/1.7.12/css/materialdesignicons.min.css" rel="stylesheet">

    <%= stylesheet_link_tag    'student/application', media: 'all', 'data-turbolinks-track' => "reload" %>
    <%= javascript_include_tag 'student/application', 'data-turbolinks-track' => "reload" %>
    <%= javascript_pack_tag 'lo-exercise/react-app', 'data-turbolinks-track': 'reload', defer: true %>

    <%= csrf_meta_tags %>
  </head>
  <body id="<%= controller_name %>-<%= action_name %>">

    <%= render 'shared/flash_messages'  %>

    <%= render 'layouts/view_lo/navbar' %>

    <div class="row">
      <div id="box-sidebar" class="col s1">
        <%= render 'layouts/view_lo/side_navbar' %>
      </div>

      <div id="main-content" class="col s11 push-s1">
        <div class="content row">
          <div class="col s1">
            <% exec_if_the_page_exists(@lo.contents, @page - 1) do %>
              <%= link_to student_team_lo_path(@team, @lo, @page - 1),
                          class: 'btn-floating btn-large waves-effect waves-light' do %>
                <%= fa_icon 'angle-left' %>
              <% end %>
            <% end %>
          </div>

          <div class="col s10">
            <%= yield %>
          </div>

          <div class="col s1">
            <% exec_if_the_page_exists(@lo.contents, @page + 1) do %>
              <%= link_to student_team_lo_path(@team, @lo, @page + 1),
                          class: 'btn-floating btn-large waves-effect waves-light' do %>
                <%= fa_icon 'angle-right' %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
