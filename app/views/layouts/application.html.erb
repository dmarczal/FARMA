<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag %>
  <title><%= full_title(yield(:title)) %></title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="//cdn.materialdesignicons.com/1.7.12/css/materialdesignicons.min.css" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="http://cdn.mathjax.org/mathjax/2.2-latest/MathJax.js?config=TeX-AMS_HTML"></script>
  <%= csrf_meta_tags %>
</head>
<body id="home-page">

  <header>
    <%= render 'layouts/home/navbar_top' %>

    <%= render 'shared/flash_messages'  %>
  </header>

  <main>
     <%= yield %>
  </main>

  <% if controller.controller_name == 'home' %>
    <%= render 'layouts/home/footer' %>
  <% end %>

</body>
</html>
