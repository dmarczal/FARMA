<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag    'student/application', media: 'all', 'data-turbolinks-track' => "reload" %>
    <%= javascript_include_tag 'student/application', 'data-turbolinks-track' => "reload" %>

    <%= csrf_meta_tags %>
  </head>
  <body id="<%= controller_name %>-<%= action_name %>">

    <%= render 'shared/flash_messages'  %>

    <%= render 'layouts/student/navbar' %>

    <div class="row">

      <div id="box-sidebar" class="col s2">
        <%= render 'layouts/student/side_navbar' %>
      </div>

      <div id="main-content" class="col s10 push-s2">
        <% if controller_name != "registrations" %>
          <%= render_breadcrumbs :builder => ::MaterializeBreadcrumbs,
                                 class: 'nav-breadcrumbs z-depth-0 transparent' %>

          <div class="divider"></div>
        <% end %>

        <div class="content">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
