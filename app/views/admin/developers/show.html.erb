<div class="row">
  <div class="col s12 center">
    <h2 class="header gray-text2">Membro</h2>
  </div>
  <div class="col s12 m12 L12">
    <div class="row card-panel grey lighten-5 z-depth-1">
      <div class="col s12 m12 l5">
        <%= image_tag attachment_url(@developer, :profile_image, format: "jpg", fallback: "default-avatar"), :class => 'img-300' %>
      </div>
      <div class="col s12 m12 l7">
        <span class="black-text">
          <h2><%= humanize Admin::Developer, :name %>: <%= @developer.name %></h2>
          <h2><%= humanize Admin::Developer, :function %>: <%= @developer.function %></h2>
          <h2><%= humanize Admin::Developer, :active %>: <%= humanize_boolean @developer.active %></h2>
          <h2><%= humanize Admin::Developer, :start_on_project %>: <%= @developer.start_on_project %></h2>
          <% if !@developer.active? %>
          <h2><%= humanize Admin::Developer, :leave_project %>: <%= @developer.leave_project %></h2>
          <% end %>
        </span>
      </div>
      <div class="col s12 m12 l12">
        <%= link_to "editar", edit_admin_developer_path(@developer), class: "waves-effect waves-light btn" %>
      </div>
    </div>
  </div>
</div>
