<%= simple_form_for([:teacher, @lo, @exercise], html: {class: 'col s12 row'}) do |f| %>

  <%= f.input :title, autofocus: true %>

  <div class="input-field col s12 exercise_content">
    <div id="ckeditor-app" data-input-name="exercise[content]"></div>
  </div>
  <%= f.input :content, as: :hidden %>

  <%= f.button :submit_materialize, cancel: teacher_lo_path(@lo) %>
<% end %>
